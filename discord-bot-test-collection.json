      "name": "Register Discord Commands",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{}"
        }
      },
      "response": []
